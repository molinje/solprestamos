<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog
        id="colaboradorDialog"
        title="Colaborador encontrado"
        contentWidth="400px">
        <content>
            <form:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout">
                <Label text="Nombre" />
                <Text text="{dlgColaborador>/ENAME}" />
                <Label text="No. Empleado" />
                <Text text="{dlgColaborador>/PERNR}" />
                <Label text="CÃ©dula" />
                <Text text="{dlgColaborador>/PERID}" />
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button
                text="Seleccionar"
                type="Emphasized"
                press="onColaboradorSeleccionar" />
        </beginButton>
        <endButton>
            <Button
                text="Cancelar"
                press="onColaboradorCancelar" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
