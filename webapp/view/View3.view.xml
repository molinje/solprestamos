<mvc:View
  controllerName="prestamos.ccb.org.solprestamos.controller.View3"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout"
  xmlns:form="sap.ui.layout.form"
  displayBlock="true"
  xmlns="sap.m">
  <Page
    id="page3"
    title="Préstamo educativo"
    showNavButton="true"
    navButtonPress=".onNavBack">
    <content>
        <Wizard id="wizardEduca" complete="onWizardComplete" class="sapUiResponsiveMargin">
                
                <!-- Paso 1: Datos del Préstamo Educativo -->
                <WizardStep
                    id="step01"
                    title="Datos del Préstamo"
                    validated="true">
                    <VBox class="sapUiSmallMargin">
                      
                        <Label text="Tipo de Educación"/>
									<Select selectedKey="{/tipoEducacion}" width="100%">
										<core:Item key="PRE" text="Pregrado"/>
										<core:Item key="POS" text="Postgrado"/>
						</Select>

                         <Label text="Nivel"/>
									<Select selectedKey="{/Nivel}" width="100%">
										<core:Item key="01" text="1"/>
                                        <core:Item key="02" text="2"/>
                                        <core:Item key="03" text="3"/>
                                        <core:Item key="04" text="4"/>
                                        <core:Item key="05" text="5"/>
                                        <core:Item key="06" text="6"/>
                                        <core:Item key="07" text="7"/>
                                        <core:Item key="08" text="8"/>
                                        <core:Item key="09" text="9"/>
                                        <core:Item key="10" text="10"/>
                                         <core:Item key="11" text="11"/>
                                        <core:Item key="12" text="12"/>

						</Select>       

                         <Label text="Periodicidad"/>
									<Select selectedKey="{/Periodicidad}" width="100%">
										<core:Item key="01" text="Anual"/>
                                        <core:Item key="02" text="Cuatrimestral"/>
                                        <core:Item key="03" text="Semestral"/>
                                      
						</Select> 
                          <Label text="Valor Solicitado" labelFor="inputValorSolicitado" />
                        <Input
                            id="inputValorSolicitado"
                            value="{educaView>/valorSolicitado}"
                            type="Number"
                            width="100%"
                            placeholder="Ingrese el valor solicitado"/>
                       <Label text="Valor Prestamo" labelFor="inputValorPrestamo" /> 
                          <Input
                            id="inputValorPrestamo"
                            value="{educaView>/valorPrestamo}"
                            type="Number"
                            width="100%"
                            editable="false"
                            /> 
                          <Label text="Valor a pagar" labelFor="inputValorValorPagar" /> 
                          <Input
                            id="inputValorValorPagar"
                            value="{educaView>/ValorPagar}"
                            type="Number"
                            width="100%"
                            editable="false"
                            /> 

                         <Label text="N. Cuotas"/>
									<Select selectedKey="{/NCuotas}" width="100%">
										<core:Item key="05" text="5"/>
                                        <core:Item key="10" text="10"/>
                                      
						</Select>
                         <Label text="Valor cuota" labelFor="inputValorValorCuota" /> 
                          <Input
                            id="inputValorValorCuota"
                            value="{educaView>/ValorCuota}"
                            type="Number"
                            width="100%"
                            editable="false"
                            /> 

                             <Label text="Origen Universidad"/>
									<Select selectedKey="{/OrigenU}" width="100%">
										<core:Item key="01" text="Colombia"/>
                                        <core:Item key="02" text="Ecuador"/>
                                        <core:Item key="03" text="Perú"/>
                                        <core:Item key="04" text="Brasil"/>
                                        <core:Item key="05" text="España"/>
                                        <core:Item key="06" text="EE.UU."/>                                    
						</Select>

                         <Label text="Descuento en Primas"/>
									<Select selectedKey="{/DescuentoPrimas}" width="100%">
										<core:Item key="NO" text="No Aplica"/>
                                        <core:Item key="SI" text="Descontar Primas"/>
                                      
						</Select>
                         <Label text="Porcentaje"/>
									<Select selectedKey="{/Porcentaje}" width="100%">
										<core:Item key="10" text="10%"/>
                                        <core:Item key="20" text="20%"/>
                                        <core:Item key="30" text="30%"/>
                                        <core:Item key="40" text="40%"/>
                                        <core:Item key="50" text="50%"/>
                                      
						</Select>                     
                
                    </VBox>
                </WizardStep>
                
                <!-- Paso 2: Información del Solicitante -->
                <WizardStep
                    id="step02"
                    title="Información del Solicitante"
                    validated="true">
                    <VBox class="sapUiSmallMargin">
                        <Label text="¿Tiene codeudor?" class="sapUiSmallMarginBottom"/>
                        <RadioButtonGroup
                            id="rbGroupCodeudor3"
                            selectedIndex="{educaView>/tieneCodeudor}">
                            <RadioButton text="Sí"/>
                            <RadioButton text="No"/>
                        </RadioButtonGroup>
                        
                        <Label text="Número de Documento" labelFor="inputDocumento" class="sapUiSmallMarginTop sapUiSmallMarginBottom"/>
                        <Input
                            id="inputDocumento3"
                            value="{educaView>/numeroDocumento}"
                            width="100%"
                            placeholder="Ingrese número de documento"/>
                    </VBox>
                </WizardStep>
                

                
                <!-- Paso 4: Documentos -->
                <WizardStep
                    id="step03"
                    title="Soportes"
                    validated="true">
                    <VBox class="sapUiSmallMargin">
                        <Label text="Adjuntar Documentos" class="sapUiSmallMarginBottom"/>
                        <UploadCollection
                            id="uploadCollection3"
                            uploadUrl="/upload"
                            multiple="true"
                            uploadComplete="onUploadComplete">
                        </UploadCollection>
                        
                        <Button
                            id="btnCrearSolicitud3"
                            text="Crear Solicitud"
                            type="Emphasized"
                            press="onCrearSolicitud"
                            enabled="{educaView>/solicitudEnabled}"
                            class="sapUiMediumMarginTop"
                            width="200px"/>
                    </VBox>
                </WizardStep>
                
       </Wizard>
      <VBox
        alignItems="Center"
        justifyContent="Center"
        class="sapUiMediumMarginTop">
        <items>

          <Button
            text="Volver al Inicio"
            type="Emphasized"
            icon="sap-icon://home"
            press=".onNavBack"
            class="sapUiSmallMarginTop"/>
        </items>
      </VBox>
    </content>
  </Page>
</mvc:View>