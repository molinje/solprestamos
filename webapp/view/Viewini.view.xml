<mvc:View controllerName="prestamos.ccb.org.solprestamos.controller.Viewini"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <content>
      <VBox alignItems="Center" justifyContent="Center" class="sapUiMediumMargin">
            <VBox width="400px" class="sapUiSmallMarginTop">
                    <Label text="Tipo PrÃ©stamo" labelFor="selectPrestamo" class="sapUiSmallMarginBottom"/>


                <Select
					forceSelection="false"
					selectedKey="{/selectedPrestamo}"
					items="{
						path: 'prestamos>/PrestamoCollection',
                        sorter: { path: 'Name' }
					}">
					<core:Item key="{prestamos>PrestamoId}" text="{prestamos>Name}" />
				</Select>
                    
                    <Button
                        text="Ir"
                        type="Emphasized"
                        press="onNavigate"
                        class="sapUiMediumMarginTop"
                        width="100%"/>
            </VBox>
      </VBox>
      
    </content>
    </Page>
</mvc:View>