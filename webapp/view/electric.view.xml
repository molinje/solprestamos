<mvc:View
  controllerName="prestamos.ccb.org.solprestamos.controller.electric"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout"
  xmlns:form="sap.ui.layout.form"
  displayBlock="true"
  xmlns="sap.m">
  <Page
    id="Pageelectric"
    title="Préstamo Movilidad Eléctrica"
    showNavButton="true"
    navButtonPress=".onNavBack">
    <content>
        <Wizard id="wizardelectric" complete="onWizardComplete" class="sapUiResponsiveMargin">
                
                <!-- Paso 1: Datos del Préstamo Educativo -->
                <WizardStep
                    id="stepelectric01"
                    title="Datos del Préstamo"
                    validated="true">
                   <VBox class="sapUiSmallMargin">
                        <Label text="Valor Solicitado" labelFor="inputValorSolicitado" class="sapUiSmallMarginBottom"/>
                        <Input
                            id="inputValorSolicMelectric"
                            value="{educaView>/valorSolicitado}"
                            type="Number"
                            width="100%"
                            placeholder="Ingrese el valor solicitado"/>
                        
                           <Label text="N Cuotas"/>
									<Select selectedKey="{/CuotasCompu}" width="100%">
										<core:Item key="01" text="1"/>
                                        <core:Item key="02" text="2"/>
                                        <core:Item key="03" text="3"/>
                                        <core:Item key="04" text="4"/>
                                        <core:Item key="05" text="5"/>
                                        <core:Item key="06" text="6"/>
                                        <core:Item key="07" text="7"/>
                                        <core:Item key="08" text="8"/>
                                        <core:Item key="09" text="9"/>
                                        <core:Item key="10" text="10"/>
                                        <core:Item key="11" text="11"/>
                                        <core:Item key="12" text="12"/>
                                        <core:Item key="13" text="13"/>
                                        <core:Item key="14" text="14"/>
                                        <core:Item key="15" text="15"/>
                                        <core:Item key="16" text="16"/>
                                        <core:Item key="17" text="17"/>
                                        <core:Item key="18" text="18"/>

						</Select>
                           <Label text="Valor cuota préstamo" labelFor="ValorCuotaMelectric" /> 
                          <Input
                            id="ValorCuotaMelectric"
                            value="{educaView>/ValorCuotaMelectric}"
                            type="Number"
                            width="100%"
                            editable="false"
                            />
                        <Label text="Valor préstamo" labelFor="ValorPMelectric" /> 
                          <Input
                            id="ValorPMelectric"
                            value="{educaView>/ValorPMelectric}"
                            type="Number"
                            width="100%"
                            editable="false"
                            />

                          <Label text="Destino"/>
									<Select selectedKey="{/Destino}" width="100%">
										<core:Item key="01" text="Colaborador"/>
                                        <core:Item key="02" text="Proveedor"/>
                                      
						</Select>
                           <Label text="Descuento en Primas"/>
									<Select selectedKey="{/DescuentoPrimasCompu}" width="100%">
										<core:Item key="NO" text="No Aplica"/>
                                        <core:Item key="SI" text="Descontar Primas"/>
                                      
						</Select>                      
                    </VBox>
                </WizardStep>
                     <!-- Paso 2: Información del Solicitante -->
                <WizardStep
                    id="stepMElectric02"
                    title="Primas y Bonificaciones"
                    validated="true">
                    <VBox class="sapUiSmallMargin">
                        <Label text="Valor cuota préstamo" labelFor="ValorDescPrinasMelectric" /> 
                          <Input
                            id="ValorDescPrimasMelectric"
                            value="{educaView>/ValorDescPrinasMelectric}"
                            type="Number"
                            width="100%"
                            editable="false"
                            />
                    </VBox>
                </WizardStep>
                
               
                
                <!-- Paso 3: Documentos -->
                <WizardStep
                    id="stepMElectric03"
                    title="Soportes"
                    validated="true">
                    <VBox class="sapUiSmallMargin">
                        <Label text="Adjuntar Documentos" class="sapUiSmallMarginBottom"/>
                        <UploadCollection
                            id="uploadCollectionMelectric"
                            uploadUrl="/upload"
                            multiple="true"
                            uploadComplete="onUploadComplete">
                        </UploadCollection>
                        
                        <Button
                            id="btnCrearSolicPMelectric"
                            text="Crear Solicitud"
                            type="Emphasized"
                            press="onCrearSolicitud"
                            enabled="{educaView>/solicitudEnabled}"
                            class="sapUiMediumMarginTop"
                            width="200px"/>
                    </VBox>
                </WizardStep>
                
       </Wizard>
      <VBox
        alignItems="Center"
        justifyContent="Center"
        class="sapUiMediumMarginTop">
        <items>
          <Title
            text="Esta es la Vista 3"
            level="H2"
            class="sapUiMediumMarginBottom"/>
          <Text
            text="Aquí puedes añadir el contenido específico de la Vista 3"
            class="sapUiMediumMarginBottom"/>
          <Button
            text="Volver al Inicio"
            type="Emphasized"
            icon="sap-icon://home"
            press=".onNavBack"
            class="sapUiSmallMarginTop"/>
        </items>
      </VBox>
    </content>
  </Page>
</mvc:View>